# Development Environment Configuration

# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api

# Database (local Docker)
DATABASE_HOST=127.0.0.1
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=mysellguid

# Redis (local Docker)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT - Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-development-jwt-secret-here
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-development-refresh-secret-here
JWT_REFRESH_EXPIRES_IN=30d

# Storage (local for development)
STORAGE_TYPE=local
# STORAGE_BUCKET=mysellguid-dev-images
# STORAGE_REGION=us-east-1
# STORAGE_ACCESS_KEY=
# STORAGE_SECRET_KEY=
# STORAGE_ENDPOINT=
# STORAGE_PUBLIC_URL=

# AWS (optional for development)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
S3_BUCKET_NAME=mysellguid-dev-images
S3_ENDPOINT=

# Google Maps
GOOGLE_MAPS_API_KEY=your-development-google-maps-key

# OpenAI (optional for development)
OPENAI_API_KEY=sk-your-openai-key

# Apify (optional for development)
APIFY_API_TOKEN=apify_api_your-token

# Firebase (optional for development)
FIREBASE_PROJECT_ID=your-dev-project-id
FIREBASE_PRIVATE_KEY=your-private-key
FIREBASE_CLIENT_EMAIL=your-client-email

# Application Settings
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp
DEFAULT_SEARCH_RADIUS=5000
MAX_SEARCH_RADIUS=50000

# Rate Limiting (more lenient for development)
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=200

# Logging
LOG_LEVEL=debug
