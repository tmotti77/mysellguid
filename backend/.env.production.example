# Production Environment Configuration

# Application
NODE_ENV=production
PORT=3000
API_PREFIX=api

# Database (Managed PostgreSQL)
DATABASE_HOST=your-production-db-host.rds.amazonaws.com
DATABASE_PORT=5432
DATABASE_USER=your-prod-db-user
DATABASE_PASSWORD=your-strong-prod-db-password
DATABASE_NAME=mysellguid_production

# Redis (Managed Redis)
REDIS_HOST=your-production-redis-host.cache.amazonaws.com
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# JWT - MUST use strong secrets in production!
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-production-jwt-secret-128-chars-minimum
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-production-refresh-secret-128-chars-minimum
JWT_REFRESH_EXPIRES_IN=30d

# Storage (Cloudflare R2 or AWS S3)
STORAGE_TYPE=r2
STORAGE_BUCKET=mysellguid-production-images
STORAGE_REGION=auto
STORAGE_ACCESS_KEY=your-r2-access-key
STORAGE_SECRET_KEY=your-r2-secret-key
STORAGE_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
STORAGE_PUBLIC_URL=https://pub-your-id.r2.dev

# AWS (if using S3 instead of R2)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
S3_BUCKET_NAME=mysellguid-production-images
S3_ENDPOINT=

# Google Maps
GOOGLE_MAPS_API_KEY=your-production-google-maps-key-with-restrictions

# OpenAI
OPENAI_API_KEY=sk-your-production-openai-key

# Apify
APIFY_API_TOKEN=apify_api_your-production-token

# Firebase
FIREBASE_PROJECT_ID=your-production-project-id
FIREBASE_PRIVATE_KEY=your-production-private-key
FIREBASE_CLIENT_EMAIL=your-production-client-email

# Application Settings
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp
DEFAULT_SEARCH_RADIUS=5000
MAX_SEARCH_RADIUS=50000

# Rate Limiting (stricter for production)
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=warn
