# ============================================
# MySellGuid Backend Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# For production (Render), set these in dashboard

# ============================================
# APPLICATION
# ============================================
NODE_ENV=development
PORT=3000
API_PREFIX=api

# Seed secret - required to call /api/seed endpoint
# Generate: node -e "console.log(require('crypto').randomBytes(16).toString('hex'))"
SEED_SECRET=your-seed-secret-here

# ============================================
# DATABASE (PostgreSQL + PostGIS)
# ============================================
# Local development:
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=mysellguid

# Production (Render provides this):
# DATABASE_URL=postgres://user:password@host:port/database

# ============================================
# REDIS
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Production (Render provides this):
# REDIS_URL=redis://host:port

# ============================================
# JWT AUTHENTICATION
# ============================================
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-jwt-secret-64-chars-minimum
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-refresh-secret-64-chars-minimum
JWT_REFRESH_EXPIRES_IN=7d

# ============================================
# IMAGE STORAGE
# ============================================
# Options: local, s3, cloudinary
STORAGE_TYPE=local

# AWS S3
AWS_REGION=il-central-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=mysellguid-images

# Cloudinary (simpler alternative)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# ============================================
# AI / ML SERVICES
# ============================================
# Choose provider: openai, gemini
AI_PROVIDER=gemini

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key

# Google Gemini (recommended for image analysis)
GOOGLE_GEMINI_API_KEY=your-gemini-api-key

# ============================================
# PUSH NOTIFICATIONS (Firebase)
# ============================================
FIREBASE_PROJECT_ID=
FIREBASE_PRIVATE_KEY=
FIREBASE_CLIENT_EMAIL=

# ============================================
# GOOGLE MAPS
# ============================================
GOOGLE_MAPS_API_KEY=AIzaSyBRSlKoC5KO0bkP-i7r6tWomRqE-raW9Z8

# ============================================
# SOCIAL MEDIA SCRAPING
# ============================================
APIFY_API_TOKEN=

# ============================================
# APPLICATION SETTINGS
# ============================================
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp
DEFAULT_SEARCH_RADIUS=5000
MAX_SEARCH_RADIUS=50000

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# ============================================
# MONITORING (Sentry)
# ============================================
# Get your DSN from https://sentry.io
SENTRY_DSN=

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=debug
