{
  "expo": {
    "name": "MySellGuid",
    "slug": "mysellguid",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#4F46E5"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.mysellguid.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "MySellGuid needs your location to show nearby sales and stores.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "MySellGuid needs your location to notify you about nearby sales even when the app is in the background."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#4F46E5"
      },
      "package": "com.mysellguid.app",
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyD9BLNnimK__WAR-hgAAnUeCEplCUPeASE"
        }
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow MySellGuid to use your location to show nearby sales."
        }
      ]
    ],
    "extra": {
      "apiUrl": "http://192.168.1.37:3000/api"
    }
  }
}